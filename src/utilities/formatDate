export const formatDate = (dateTimeString) => {
  const options = {
    weekday: 'short',
    month: 'short',
    day: 'numeric',
    year: 'numeric',
    hour: 'numeric',
    minute: 'numeric',
  };
  
  const formattedDate = new Date(dateTimeString).toLocaleString('en-US', options);
  return formattedDate;
};